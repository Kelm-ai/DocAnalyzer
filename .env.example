# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-docintel.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-docintel-key

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI Vision Evaluator
OPENAI_API_KEY=optional-openai-key-for-vision-pipeline
OPENAI_MODEL=gpt-5

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-3-pro-preview

# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
CLAUDE_MODEL=claude-opus-4-5-20251101

# Vision Pipeline Configuration
# Provider options: openai, gemini, claude
VISION_PROVIDER=claude
VISION_EVALUATOR_CONCURRENCY=4
VISION_REASONING_EFFORT=medium

# Frontend / CORS
# Comma-separated list of deployed frontend origins (https://app.example.com,https://staging.example.com)
CORS_ALLOW_ORIGINS=https://frontend-docanalyzer-production.up.railway.app
# Set to true only if you want to allow every origin (use with caution)
CORS_ALLOW_ALL=false
