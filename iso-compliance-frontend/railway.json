{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm --prefix iso-compliance-frontend run build",
    "watchPaths": [
      "iso-compliance-frontend/**"
    ],
    "installCommand": "npm --prefix iso-compliance-frontend ci"
  },
  "deploy": {
    "startCommand": "npx --prefix iso-compliance-frontend serve --single --listen $PORT iso-compliance-frontend/dist",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
